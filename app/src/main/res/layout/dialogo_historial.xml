<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutHistorialPeso"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/labHistorialFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="06/05/2019"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/labHistorialEjercicio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio 1: 50kg"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tbHistorialEjercicio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/labHistorialEjercicio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio 2: 50kg"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tbHistorialEjercicio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/labHistorialEjercicio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio 3: 50kg"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tbHistorialEjercicio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/labHistorialEjercicio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio 4: 50kg"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tbHistorialEjercicio4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/labHistorialNotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notas_2"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tbHistorialNotas"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>